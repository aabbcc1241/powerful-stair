<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/std_space_height" />

    <TableRow>

        <TextView
            android:id="@+id/aboutYou_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutYou_username_label" />

        <EditText
            android:id="@+id/aboutYou_editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" >
        </EditText>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/aboutYou_userage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutYou_userAge_label" />

        <EditText
            android:id="@+id/aboutYou_editText_userage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >
        </EditText>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/aboutYou_userheight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutYou_userHeight_label_m" />

        <EditText
            android:id="@+id/aboutYou_editText_userheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:ems="10"
            android:inputType="numberDecimal" >
        </EditText>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/aboutYou_userweight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutYou_userWeight_label_kg" />

        <EditText
            android:id="@+id/aboutYou_editText_userweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" >
        </EditText>
    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:id="@+id/aboutYou_button_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/aboutYou_load"
            android:background="@drawable/button_bg_pink_1" />
        <Button
            android:id="@+id/aboutYou_button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/aboutYou_update"
            android:background="@drawable/button_bg_pink_1" />
    </LinearLayout>

    <TableRow>

        <TextView
            android:id="@+id/aboutYou_bmi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutYou_bmi_label" />

        <EditText
            android:id="@+id/aboutYou_editText_userbmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:focusableInTouchMode="false">
        </EditText>
    </TableRow>

</TableLayout>